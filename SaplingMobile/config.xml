<?xml version='1.0' encoding='utf-8'?>
<widget id="skullisland.pirate.mobilewallet" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Pirate Wallet</name>
    <description>
        Pirate Wallet
    </description>
    <author email="zerocurrency@gmail.com" href="https://zero.directory">
        Team Zero
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="./src/assets/Pirate_Logo_Skull_Gold.png" />
        <splash src="./src/assets/png/splash.png" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false"/>
        <allow-intent href="market:*" />
        <preference name="android-targetSdkVersion" value="26" />
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:debuggable = "false" />
        </edit-config>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="KeepRunning" value="true" />
</widget>
